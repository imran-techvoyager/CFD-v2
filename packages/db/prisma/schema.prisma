generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id              String           @id @default(uuid()) @db.Uuid
  email           String           @unique
  password        String
  balance         Int           
  assets          Asset[]
  closedOrders    ClosedOrders[]
}

model Asset{
  id              String           @id @default(uuid()) @db.Uuid
  name            String
  amount          BigInt

  userId          String           @db.Uuid
  user            User             @relation(fields: [userId], references: [id])
}

model ClosedOrders{
  id              String           @id @default(uuid()) @db.Uuid
  asset           String
  type            TradeType
  openPrice       BigInt
  closePrice      BigInt
  margin          BigInt
  leverage        Int
  closeReason     Reasons
  timestamp       DateTime
  closeTimestamp  DateTime

  userId          String         @db.Uuid
  user            User           @relation(fields: [userId], references: [id])
}

enum TradeType{
  buy
  sell
}

enum Reasons{
  manual
  take_profit
  stop_loss
  liquidation
}

model EngineSnapshot {
  id           String   @id @default(uuid())
  timestamp    DateTime @default(now())
  openOrders   Json
  priceStore   Json
}
